<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kovedward.android.guesscountry.GuessActivity">

    <Button
        android:id="@+id/button_country_right_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_country_left_up"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        />

    <Button
        android:id="@+id/button_country_left_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="122dp"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        />

    <Button
        android:id="@+id/button_country_left_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_country_left_up"
        android:layout_alignStart="@+id/button_country_left_up"
        android:layout_below="@+id/button_country_right_up"
        android:layout_marginTop="33dp"
        />

    <Button
        android:id="@+id/button_country_right_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_country_left_down"
        android:layout_alignEnd="@+id/button_country_right_up"
        android:layout_alignRight="@+id/button_country_right_up"
        />

    <Button
        android:id="@+id/button_food_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:elevation="0dp"
        android:text="@string/food_button"
        android:layout_alignRight="@+id/button_animal_hint"
        android:layout_alignEnd="@+id/button_animal_hint"/>

    <TextView
        android:id="@+id/textview_food_hint"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_food_hint"
        android:layout_alignBottom="@+id/button_food_hint"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textview_animal_hint"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_animal_hint"
        android:layout_alignBottom="@+id/button_animal_hint"
        android:layout_toEndOf="@+id/button_country_left_up"
        android:layout_toRightOf="@+id/button_country_left_up"
        />

    <TextView
        android:id="@+id/textview_other_hint"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_other_hint"
        android:layout_alignBottom="@+id/button_other_hint"
        android:layout_alignLeft="@+id/textview_animal_hint"
        android:layout_alignStart="@+id/textview_animal_hint"
        />

    <Button
        android:id="@+id/button_animal_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_food_hint"
        android:layout_marginTop="14dp"
        android:text="@string/animal_button"/>

    <Button
        android:id="@+id/button_other_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_animal_hint"
        android:layout_marginTop="16dp"
        android:text="@string/other_button"
        android:layout_alignRight="@+id/button_animal_hint"
        android:layout_alignEnd="@+id/button_animal_hint"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="@string/choose_country"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_above="@+id/button_country_right_up"
        android:layout_toRightOf="@+id/button_other_hint"
        android:layout_toEndOf="@+id/button_other_hint"/>
</RelativeLayout>
